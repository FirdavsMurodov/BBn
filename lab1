#include <iostream>

using namespace std;

int main()
{
  setlocale(LC_ALL, "Russian");
  cout << "Ââåäèòå À è Â: ";

  double a, b;

  cin >> a >> b;

  a *= a; b *= b;
  cout << a + b << ' ' << a - b << ' ' << a * b << ' ' << a / b;

  return 0;
}





#include <iostream>

using namespace std;

int main()
{
  setlocale(LC_ALL, "Russian");
  cout << "Ââåäèòå À è Á: ";

  double a, b;

  cin >> a >> b;

  if(a < 0) a *= -1;
  if(b < 0) b *= -1;

  cout << a + b << ' ' << a - b << ' ' << a * b << ' ' << a / b;

  return 0;
}
